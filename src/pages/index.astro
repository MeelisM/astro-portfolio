---
import "../styles/global.css";
import Navbar from "../components/Navbar.astro";
import Footer from "../components/Footer.astro";
import Skills from "../components/Skills.astro";
import Projects from "../components/Projects.astro";
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta content="width=device-width, initial-scale=1.0" name="viewport" />
    <meta
      content="Explore my personal portfolio built with Astro and Tailwind CSS, featuring automated AWS S3 infrastructure provisioning 
        using Terraform (IaC) and streamlined CI/CD via GitHub Actions."
      name="description"
    />
    <title>meelis.dev</title>
    <link href="/favicon.svg" rel="icon" type="image/svg+xml" />
    <link
      as="font"
      crossorigin="anonymous"
      href="/fonts/Carlito-Regular.woff2"
      rel="preload"
      type="font/woff2"
    />
  </head>
  <body class="min-h-screen flex flex-col text-primary bg-background">
    <!-- Skip Link -->
    <a
      class="sr-only focus:not-sr-only absolute top-4 left-4 bg-primary text-secondary-project px-4 py-2 rounded shadow-md text-center"
      href="#main-content"
    >
      Skip to main content
    </a>

    <!-- Header with border -->
    <header class="border-b border-accent">
      <div class="max-w-4xl mx-auto px-4">
        <Navbar />
      </div>
    </header>

    <!-- Main Content Wrapper -->
    <main class="flex-1 max-w-4xl mx-auto px-4" id="main-content" role="main">
      <section aria-labelledby="projects-heading" class="border-b border-accent py-4" id="Projects">
        <h2 class="sr-only" id="projects-heading">Projects</h2>
        <Projects />
      </section>
      <section aria-labelledby="skills-heading" class="py-4" id="Skills">
        <h2 class="sr-only" id="skills-heading">Skills</h2>
        <Skills />
      </section>
    </main>

    <!-- Footer Wrapper -->
    <footer class="border-t border-accent">
      <div class="max-w-4xl mx-auto">
        <Footer />
      </div>
    </footer>
  </body>
</html>
