---
import skillsData from "../content/skills.json";

const { skills } = skillsData;
const { filter = [] } = Astro.props;

const filteredSkills =
  Array.isArray(filter) && filter.length > 0
    ? skills.filter((skill) => filter.includes(skill.name))
    : skills;
---

<ul class="flex flex-wrap gap-1">
  {
    filteredSkills.map((skill) => (
      <li
        class="inline-flex items-center px-2 py-1 rounded-[12px] bg-black text-white hover:bg-gray-600 transition-colors duration-200"
        aria-label={skill.name}
      >
        <span class="mr-1 w-4 h-4" set:html={skill.icon} aria-hidden="true" />
        <span class="text-sm">{skill.name}</span>
      </li>
    ))
  }
</ul>

<style>
  span :global(svg) {
    fill: currentColor;
  }
</style>
