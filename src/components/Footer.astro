---
import HoverButton from "@components/HoverButton.astro";
const year: number = new Date().getFullYear();
---

<footer class="w-full relative">
  <div class="max-w-4xl mx-auto text-center py-5">
    <p class="text-primary-footer">
      Meelis Mumm Â© {year} | MIT License |
      <a
        aria-label="Visit website's GitHub repository"
        class="relative group transform transition duration-300 hover:-translate-y-1 hover:scale-[1.25] underline focus:outline-none focus-visible:outline-2 focus-visible:outline-dotted focus-visible:outline-primary-logo focus-visible:outline-offset-2"
        href="https://github.com/MeelisM/meelis.dev"
        >GitHub
        <span
          class="absolute opacity-0 group-hover:opacity-100 group-focus:opacity-100 group-hover:animate-wiggle group-focus-within:animate-wiggle -top-7 left-1/2 transform -translate-x-1/2 pointer-events-none"
        >
          <HoverButton text="Visit GitHub" />
        </span>
      </a>
    </p>
  </div>
</footer>
